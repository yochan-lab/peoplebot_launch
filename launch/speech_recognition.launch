<launch>

	<node machine="PeopleBot" pkg="speech2text" name="recognizer" type="speech2text.py">
		<param name="device" value="alsa hw:1" />
		<param name="silence" value="0 1 00:00:02.5 3%" />
	</node>

	<node pkg="speech2action" name="speech2action" type="actions.py" />

	<node machine="PeopleBot" pkg="text2speech" name="text2speech" type="text2speech.py" />
</launch>
