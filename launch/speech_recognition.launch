<launch>

	<node machine="PeopleBot" pkg="pocketsphinx" name="recognizer" type="recognizer.py">
		<param name="source" value="alsasrc device=hw:1,0" />
		<param name="lm" value="$(arg lm)" />
	</node>

	<node pkg="pocketsphinx" name="actions2" type="actions.py" args="run" output="screen" />

	<node machine="PeopleBot" pkg="text2speech" name="text2speech" type="text2speech.py" />
</launch>
